{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 8,
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "globals": {
    "Promise": false,
    "browser": false
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "array-bracket-newline": [
      "error",
      {
        "minItems": 1,
        "multiline": true
      }
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "array-element-newline": [
      "error",
      {
        "minItems": 1,
        "multiline": true
      }
    ],
    "block-spacing": "error",
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never"
      }
    ],
    "comma-spacing": "error",
    "curly": "error",
    "dot-location": [
      "error",
      "property"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "eqeqeq": "error",
    "func-call-spacing": [
      "error",
      "always",
      {
        "allowNewlines": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "key-spacing": [
      "error",
      {
        "afterColon": true,
        "beforeColon": false,
        "mode": "strict"
      }
    ],
    "keyword-spacing": "error",
    "no-console": "off",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-tabs": "error",
    "no-trailing-spaces": "error",
    "no-unused-vars": [
      "error",
      {
        "args": "none",
        "ignoreRestSiblings": false,
        "vars": "all"
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "minProperties": 1
      }
    ],
    "object-property-newline": "error",
    "one-var-declaration-per-line": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "spaced-comment": [
      "error",
      "always"
    ],
    "switch-colon-spacing": "error"
  }
}